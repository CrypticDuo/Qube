<body>
    <% include ./topnav %>
    <!-- Header -->
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <div class="overlay"></div>
                        <div class="demo"></div>
                        <h1>Enjoy Your Music Anywhere</h1>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li class="facebook">
                                <a href="/auth/facebook">
                                  <div class="icon"><i class="fa fa-facebook-square fa-fw"></i></div><span class="network-name">Login with Facebook</span></a>
                            </li>
                            <li class="github">
                                <a href="/auth/github">
                                  <div class="icon"><i class="fa fa-github fa-fw"></i></div><span class="network-name">Login with Github</span></a>
